#!/usr/bin/env php
<?php

namespace Lkrms\Tests;

use DateTime;
use Lkrms\Err\Err;
use Lkrms\Support\SqlQuery;

$loader = require (__DIR__ . '/../vendor/autoload.php');
$loader->addPsr4('Lkrms\\Tests\\', __DIR__);

Err::load();

$query = new SqlQuery(fn() => '?');

$sql1 = $query->getWhere();

$query = ($query->whereValueInList('record_id')
    ->whereValueInList('user_id', 12, 36, 7, 32)
    ->whereValueInList('session_id', '1000', '1001', '1002'));

$sql2 = $query->getWhere();

$query = ($query->addParam('Expiry', new DateTime(), $_expiry)
    ->where([
        '__' => SqlQuery::OR,
        'Expiry IS NULL',
        'Expiry > ' . $_expiry,
    ]));

$sql3 = $query->getWhere();

var_dump([
    'sql1'  => $sql1,
    'sql2'  => $sql2,
    'sql3'  => $sql3,
    'query' => $query,
]);
